<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

<!--   Tab Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_blue_bright"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Home"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="Profile"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="Settings"
            android:textColor="@android:color/black" />
    </LinearLayout>

<!--    Home Tab-->
    <LinearLayout
        android:id="@+id/home_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/department_building"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gedungti"
            android:contentDescription="Gambar Gedung Jurusan" />

        <TextView
            android:id="@+id/department_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Jurusan Teknologi Informasi."
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Halo, Nashwa!"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Jadwal Mata Kuliah"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:padding="8dp"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:background="@android:color/holo_blue_dark"
                    android:padding="8dp"
                    android:text="Senin"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <TextView
                    android:padding="8dp"
                    android:text="Matematika Diskrit" />
            </TableRow>

            <TableRow>
                <TextView
                    android:background="@android:color/holo_blue_dark"
                    android:padding="8dp"
                    android:text="Selasa"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <TextView
                    android:padding="8dp"
                    android:text="Workshop Mobile Application" />
            </TableRow>

            <TableRow>
                <TextView
                    android:background="@android:color/holo_blue_dark"
                    android:padding="8dp"
                    android:text="Rabu"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <TextView
                    android:padding="8dp"
                    android:text="Workshop Sistem Berbasis Web" />
            </TableRow>

            <TableRow>
                <TextView
                    android:background="@android:color/holo_blue_dark"
                    android:padding="8dp"
                    android:text="Kamis"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <TextView
                    android:padding="8dp"
                    android:text="Workshop Kualitas Perangkat Lunak" />
            </TableRow>

            <TableRow>
                <TextView
                    android:background="@android:color/holo_blue_dark"
                    android:padding="8dp"
                    android:text="Jumat"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <TextView
                    android:padding="8dp"
                    android:text="Struktur Data" />
            </TableRow>
        </TableLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Click Me!"
            android:textColor="@android:color/white"
            android:onClick="onHomeButtonClick" />
    </LinearLayout>

<!--    Profile Tab-->
    <LinearLayout
        android:id="@+id/profile_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profilehwa"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="User Profile"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Nashwa Putri Ayesha" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NIM"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="E41240974" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prodi"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Teknik Informatika" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jurusan"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Teknologi Informasi" />
        </LinearLayout>
    </LinearLayout>

<!--    Setting Tab-->
    <LinearLayout
        android:id="@+id/settings_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="Notifications" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_darkmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Dark Mode" />
    </LinearLayout>

</LinearLayout>
